    "singleQuote": true,
    "trailingComma": "all",
    "semi": true
  },
  "dependencies": {
    "@typegoose/typegoose": "^7.6.3",
    "apollo-server-express": "^3.0.2",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.13.1",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "graphql": "^15.5.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "5.10.18",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express-jwt": "^6.0.2",
    "@types/faker": "^5.5.7",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/mongoose": "5.10.5",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "faker": "^5.5.3",
    "lint-staged": "^11.0.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  }
}
