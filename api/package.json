{
  "name": "soundchain-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "docker-compose up -d && nodemon -w 'src/**' -e 'ts,json' -x 'ts-node src/index.ts'",
    "lint-staged": "lint-staged",
    "seed": "ts-node src/seeds.ts"
  },
  "lint-staged": {
    "*.{ts,json,md}": "prettier --write"
